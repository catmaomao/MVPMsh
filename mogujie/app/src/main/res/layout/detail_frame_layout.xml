<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/detail_buy_board"
        android:layout_width="fill_parent"
        android:layout_height="58.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/index_bottom_bar">

        <TextView
            android:id="@+id/detail_taobao_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:textColor="#ffee4566"
            android:textSize="24.0sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/detail_im_celler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14.0dip"
            android:drawablePadding="2.0dip"
            android:drawableTop="@drawable/detail_im_icon"
            android:text="@string/detail_bottom_im_btn"
            android:textColor="#ff424242"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/detail_cart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18.0dip"
            android:layout_toRightOf="@id/detail_im_celler"
            android:drawablePadding="2.0dip"
            android:drawableTop="@drawable/detail_cart_icon"
            android:text="@string/detail_bottom_cart_btn"
            android:textColor="#ff424242"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/detail_buy_btn"
            android:layout_width="120.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/dialog_positive_btn_bg"
            android:gravity="center"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="@string/detail_bottom_buy_btn"
            android:textColor="@color/positive_text_color"
            android:textSize="16.0sp" />

        <LinearLayout
            android:id="@+id/detail_taobao_btn"
            android:layout_width="120.0dip"
            android:layout_height="39.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/detail_totaobao_btn_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1.0dip"
                android:text="@string/note_totaobao_btn"
                android:textColor="@color/taobao_text_color"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="7.0dip"
                android:layout_height="11.5dip"
                android:layout_marginLeft="10.0dip"
                android:src="@drawable/detail_taobao_btn_arrow_bg" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 
    <com.mogujie.view.DetailViewPager
        android:id="@id/detail_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/detail_buy_board" />
    -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="41.0dip"
        android:layout_alignParentTop="true"
        android:background="#96000000"
        android:clickable="true">



        <ImageView
            android:id="@+id/detail_home_btn"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/goods_detail_home_btn" />

        <ImageView
            android:id="@+id/detail_shopping_cart"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/detail_home_btn"
            android:scaleType="center"
            android:src="@drawable/detail_shopping_cart" />

        <TextView
            android:id="@+id/detail_shopping_new"
            android:layout_width="14.5dip"
            android:layout_height="14.5dip"
            android:layout_alignRight="@id/detail_shopping_cart"
            android:layout_alignTop="@id/detail_shopping_cart"
            android:layout_marginRight="4.0dip"
            android:layout_marginTop="4.0dip"
            android:gravity="top|center"
            android:paddingTop="0.0dip"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/cart_anim_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/cart_anim_icon"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/cart_anim_icon_two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true" />


</RelativeLayout>